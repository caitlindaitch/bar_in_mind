<div class="show-neighborhood-header">
  <h1><%= @neighborhood.name %></h1>
</div>

<% if current_user %>
  <div class="add-neighborhood">Don't see the bar you're looking for? <%= link_to "Add one", new_neighborhood_bar_url(@neighborhood) %>.</div>
<% else %>
  <div class="add-neighborhood">Don't see the bar you're looking for? <%= link_to "Log in", new_user_session_path %> or <%= link_to "sign up", new_user_registration_path %> to add a bar.</div>
<% end %>

<h3>Bars:</h3>

<div class="bars-background">
  <% @bars.each do |bar| %>

    <div class="neighborhoods-outer col-md-3">
      <div class="neighborhoods-inner">
        <div class="overlay">
          <%= link_to image_tag(bar.image_url, :alt => bar.name), neighborhood_bar_url(@neighborhood, bar) %>
          <div class="overlay-text">
            <div>
              <%= link_to bar.name, neighborhood_bar_url(@neighborhood, bar) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
